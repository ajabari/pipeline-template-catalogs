pipeline {
    agent {
        kubernetes {
            label "any"
            defaultContainer "jnlp"
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: gradle
    image: gradle:latest
    command:
    - cat
    tty: true
"""
        }
    }
  stages {
    stage('Build') {
      steps {
        sh """
          ./gradlew clean build
        """
      }
    }
  }
}
